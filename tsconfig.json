{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist/",
        "strictNullChecks": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2015",
        "lib": ["es2017", "dom"],
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts"]
}
